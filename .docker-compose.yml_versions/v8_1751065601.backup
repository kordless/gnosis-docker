version: '3.8'

services:
  gnosis-docker:
    build: .
    container_name: gnosis-docker
    ports:
      - "5680:5680"
    environment:
      - DEBUG=True
      - PORT=5680
      - LOCAL_ONLY=True
      # For Docker Desktop on Windows, we may need to specify the host
      - DOCKER_HOST=tcp://host.docker.internal:2375
    volumes:
      # Note: On Windows with WSL2, the socket mount won't work
      # Instead we rely on TCP connection to Docker Desktop
      # - /var/run/docker.sock:/var/run/docker.sock  # This won't work on Windows
      
      # Mount logs directory
      - ./logs:/app/logs

    # Add extra_hosts for host.docker.internal resolution
    extra_hosts:
      - "host.docker.internal:host-gateway"
    
    restart: unless-stopped
    networks:
      - gnosis-network


  redis:
    image: redis:7-alpine
    container_name: gnosis-docker-redis
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    restart: unless-stopped
    networks:
      - gnosis-network

networks:
  gnosis-network:
    driver: bridge

volumes:
  redis-data:
